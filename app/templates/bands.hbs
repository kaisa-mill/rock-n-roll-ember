<div class="w-1/3 px-2">
  <ul class="pl-2 pr-8">
    {{#each @model as |band|}}
      <li class="mb-2">
        <LinkTo @route="bands.band.songs" @model={{band.id}}>
          {{band.name}}
        </LinkTo>
      </li>
    {{/each}}
    <LinkTo
      @route="bands.new"
      class="inline-block mt-2 px-4 py-2 rounded bg-purple-600 shadowmd
      hover:shadow-lg hover:text-white"
    >
      Add band
    </LinkTo>
  </ul>
</div>
<div class="w-2/3 px-2">
  {{outlet}}
</div>